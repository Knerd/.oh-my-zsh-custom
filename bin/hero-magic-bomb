#!/bin/bash

source "_hero-helpers"

TRASH="/home/$USER/.local/share/Trash/"
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
ENDCOLOR="\e[0m"


ASCII=(
  "        ,--! "${ENDCOLOR}
  "     __/   ${RED}* ${ENDCOLOR}"
  "   ,d08b.    "${ENDCOLOR}
  "   0088MM    "${ENDCOLOR}
  "   '9MMP'    "${ENDCOLOR}
)

TEXT=(
  ""
  "â•”â•¦â•—â•”â•â•—â•”â•â•—â•¦â•”â•â•—  â”Œâ” â”Œâ”€â”â”Œâ”¬â”â”Œâ” â”¬"
  "â•‘â•‘â•‘â• â•â•£â•‘ â•¦â•‘â•‘    â”œâ”´â”â”‚ â”‚â”‚â”‚â”‚â”œâ”´â”â”‚"
  "â•© â•©â•© â•©â•šâ•â•â•©â•šâ•â•  â””â”€â”˜â””â”€â”˜â”´ â”´â””â”€â”˜${RED}*"
  ""
)

showSplash(){
  ART=(
    "\n${YELLOW}${ASCII[0]} ${TEXT[0]}"
    "\n${YELLOW}${ASCII[1]} ${TEXT[1]}"
    "\n${BLUE}${ASCII[2]} ${TEXT[2]}"
    "\n${BLUE}${ASCII[3]} ${TEXT[3]}"
    "\n${BLUE}${ASCII[4]} ${TEXT[4]}"
  )
  echo -e "${ART[@]}"
}

bombTrash(){
  echo ğŸ’£ Bombing the Trash...; 
  echo "ğŸ’£ 3..."
  sleep 0.85 
  echo "ğŸ’£ 2.."
  sleep 0.85 
  echo "ğŸ’£ 1!"
  sleep 0.85 
  echo "ğŸ’¥ BOOM!"
  rm -rfi ${TRASH}*;
}

moveToTrash(){
  FILE="$1"
  if [ -f "$FILE" ]; then
    mv "$FILE" "${TRASH}"
    echo "ğŸ’¥ BOOM!"
  else
    bombIsADud
  fi
}

listTrash(){
  ls -l ${TRASH}*; 
}

bombIsADud(){
  sleep 1
  echo "ğŸ’£ ... its a dud (file not found)"; 
  sleep 1 
}

bomb(){
  showSplash
  echo "ğŸ‘• $USER opens their bomb bag ğŸ‘œ..."; 

  case $1 in
    "l")
      echo ğŸ‘• $USER inspects the trash...; 
      listTrash
      ;;

    "file")
      echo -e "ğŸ‘• $USER grabs a bomb and tosses it @ ${cyan}$2${reset}"; 
      ask "ğŸ’£ ${yellow}Move ${cyan}$2${yellow} to trash" moveToTrash "$2"
      ;;

    "--help")
      sleep 0.75 
      echo "ğŸ‘• $USER finds the bomb manual and begins reading..."
      sleep 1.75 

      echo "ğŸ’£ Æµ bomb/b[+,-,?] [FILE]
      b       : List what's in the trash
      b!      : Execute main exlosive. Targets trash.
      b+ FILE : Move FILE to trash
      b?      : Open bomb manual
      "
      sleep 7 
      echo "ğŸ‘• $USER: Good to Know."
      # moveToTrash "$2"
      ;;

    !)
      bombTrash
      ;;

    *)
      listTrash
      ;;
  esac
}

bomb $@