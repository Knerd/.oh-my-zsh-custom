#!/usr/bin/env bash

# Console colors
red='\033[0;31m'
red_bg='\033[1;97;41m'
light_red='\033[1;31m'
green='\033[0;32m'
light_green='\033[1;32m'
green_bg='\033[1;97;42m'
yellow='\033[1;33m'
NC='\033[0m'
reset=$NC

orange='\033[0;33m'
cyan='\033[0;36m'
light_cyan='\033[1;36m'
blue='\033[0;34m'
light_blue='\033[1;34m'
purple='\033[0;35m'
light_purple='\033[1;35m'
black='\033[0;30m'
dark_gray='\033[1;30m'
light_gray='\033[0;37m'
white='\033[1;37m'

echo-red() { echo -e "${red}$1${NC}"; }
echo-green() { echo -e "${green}$1${NC}"; }
echo-green-bg() { echo -e "${green_bg}$1${NC}"; }
echo-red-bg() { echo -e "${red_bg}$1${NC}"; }
echo-yellow() { echo -e "${yellow}$1${NC}"; }

# Get the flag options
while getopts y flag
do
    case "${flag}" in
        # Accept flag -y to bypass y/n questions
        y) export YES=true;;
        *) echo $flag;
    esac
done
export YES=$YES

# reusable method to ask Questions - utilizes -y option to skip question 
function askQ(){
  Q=$(echo -e "$1 ${light_cyan}(y/n)?${NC} ")
  if [ $YES ]; then
    answer=y
  else
    read -e -n 1 -p "${Q}" answer
  fi
  echo -e "${answer}"
}

ask(){
  Q="$1"
  shift
  CMD="$@"
  while true; do
    answer=$(askQ "$Q")
    # echo "" 
    case ${answer:0:1} in
        [Yy]*) echo -e "ðŸ‘• ${green}Yes.${NC}"
          ${CMD}
          break;;
        [Nn]*) echo -e "ðŸ‘• ${red}No.${NC}"; break;;
        *) echo "Sorry, what?" >&2
    esac
  done
}